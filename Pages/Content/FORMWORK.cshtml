<table dir="rtl" width="80%">
    <form method="post">
    <tr>
        <td>שם פרטי</td>
        <td>
            <input type="text" id="txtFirstName" placeholder="הכנס שם פרטי" onchange="PrivateName()"asp-for="NewUser.FirstName" />
            <div class="error-message" id="errorFirstName"></div>
        </td>
    </tr>
    <tr>
        <td>שם שני (לא חובה)</td>
        <td>
            <input type="text" id="txtSecondName" placeholder="הכנס שם שני" onchange="SecondName()" />
            <div class="error-message" id="errorSecondName"></div>
        </td>
    </tr>
    <tr>
        <td>שם משפחה</td>
        <td>
            <input type="text" id="txtLastName" placeholder="הכנס שם משפחה" onchange="FamilyName()" asp-for="NewUser.lastName" />
            <span class="error-message" id="errorLastName"></span>
        </td>
    </tr>
    <tr>
        <td>שם משתמש</td>
        <td>
            <input type="text" id="txtUserName" placeholder="הכנס שם משתמש" onchange="UserNameCheck()" asp-for="NewUser.UserName" />
            <span class="error-message" id="errorUserName">
                @if(Model.msg!="")
                {
                    @Model.msg
                }
            </span>
        </td>
    </tr>
    <tr>
        <td>סיסמה</td>
        <td>
            <input type="password" id="txtPass1" placeholder="הכנס סיסמה" onchange="CheckPassword()" asp-for="NewUser.Password"/>
            <button type="button" id="togglePasswordButton" onclick="togglePassword()">👁</button>
            <span id="passwordStrength" class="strength-message"></span>
            <span class="error-message" id="errorPass1"></span>
        </td>
    </tr>


    <tr>
        <td>אימות סיסמה</td>
        <td>
            <input type="password" id="txtPass2" placeholder="אימות סיסמה" onchange="ConfirmPassword()"  />
            <span class="error-message" id="errorPass2"></span>
        </td>
    </tr>
    <tr>
        <td>אימייל</td>
        <td>
            <input type="email" id="txtEmail" placeholder="הכנס אימייל" onchange=" mail()" asp-for="NewUser.Mail" />
            <span class="error-message" id="errorEmail"></span>
        </td>
    </tr>
    <tr>
        <td>מגדר</td>
        <td>
            <input type="radio" id="genderMale"  value="male" required asp-for="NewUser.Gender" />
            <label for="genderMale">זכר</label>

            <input type="radio" id="genderFemale"  value="female" asp-for="NewUser.Gender" />
            <label for="genderFemale">נקבה</label>
                
            <span class="error-message" id="errorGender"></span>

        </td>
    </tr>   

    <tr>
